@model Post

<form action="NovoPost" method="POST" enctype="multipart/form-data">
    <fieldset>
        <legend>Novo Post</legend>

        <input type="text" asp-for="Id" style="display: none;" readonly>

        <label asp-for="imagePath">Imagem</label>
        <input type="file" name="file" id="name" accept="image/jpeg, image/png">

        <label asp-for="titulo">Título</label>
        <input maxlength="25" asp-for="titulo" required>

        <label asp-for="hashtags">Hashtags</label>
        <input maxlength="55" asp-for="hashtags" required>

        <label asp-for="descricao">Descrição</label>
        <textarea asp-for="descricao" cols="30" rows="10" maxlength="575" required></textarea>

        <label asp-for="conteudo">Texto</label>
        <textarea asp-for="conteudo" cols="30" rows="30" maxlength="5000" required></textarea>

        <p style="text-align: center;">
            <input type="submit" value="Enviar">
            <input type="button" class="btn btn-danger" onclick="location.href='/Blog/Dicas'" value="Cancelar">
        </p>
    </fieldset>
</form>