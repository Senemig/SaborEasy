@{
    ViewData["Title"] = "Cadastro de novo usuário";
}
@model Usuario

<h2>Cadastro de novo usuário</h2>

<p id="pMensagem">@ViewBag.Mensagem</p>

<form asp-action="Cadastro" method="post">
    <p>
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" required>
    </p>

    <p>
        <label asp-for="Login">Login</label>
        <input asp-for="Login" required>
    </p>

    <p>
        <label asp-for="Senha">Senha</label>
        <input asp-for="Senha" type="password" required>
    </p>

    <input type="submit" value="Cadastrar">
</form>