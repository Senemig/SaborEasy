@{
    ViewData["Title"] = "Mensagens";
}
@model List<Mensagem>

<div class="blog-wrapper">

    @if (Model.Count > 0)
    {
        for (int i = Model.Count - 1; i >= 0; i--)
        {
            <div class="blog-card">
                <div class="blog-card-body">
                    <p class="blog-title">@Model[i].nome</p>
                    <p class="blog-title">@Model[i].email</p>
                    <p class="blog-description">@Model[i].mensagem</p>
                    <p class="blog-date">Enviada em @Model[i].msgDate</p>
                </div>
            </div>
        }
    }
</div>