@{
    ViewData["Title"] = "Home Page";
}
@model ViewModel

@if (Model.receitas.Count > 0)
{
    if (Model.receitas.Count == 1)
    {
        <div class="main_article flex-center">
            <a href="/Receita/ExibirReceita/@Model.receitas[0].Id">
                <img src="/images/@Model.receitas[0].imagePath" alt="">
                <p>@Model.receitas[0].Titulo</p>
            </a>
        </div>
    }
    else
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < 3; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="main_article_img" src="/images/@Model.receitas[i].imagePath" alt="First slide"
                onclick="window.location='/Receita/ExibirReceita/@Model.receitas[i].Id'">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.receitas[i].Titulo</h5>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="main_article_img" src="/images/@Model.receitas[i].imagePath" alt="First slide"
                onclick="window.location='/Receita/ExibirReceita/@Model.receitas[i].Id'">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.receitas[i].Titulo</h5>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }

    if (Model.receitas.Count > 1)
    {
        <h2>Outras publicações</h2>
        <div class="other_articles">
            @for (int i = 1; i <= 3 && i < Model.receitas.Count; i++)
            {
                <a class="receita" href="/Receita/ExibirReceita/@Model.receitas[i].Id">
                    <img src="/images/@Model.receitas[i].imagePath">
                    <p>@Model.receitas[i].Titulo</p>
                </a>
            }
        </div>
    }
    if (Model.posts.Count > 0)
    {
        <div class="other_articles">
            @for (int i = 0; i < 3 && i < Model.posts.Count; i++)
            {
                <a class="post" href="/Blog/Post/@Model.posts[i].Id">
                    <img src="/images/@Model.posts[i].imagePath">
                    <p>@Model.posts[i].titulo</p>
                </a>
            }
        </div>
    }
}

else
{
    <h2>Nenhuma Receita Cadastrada!</h2>
}
